    <elements xsi:type="org.nasdanika.vinci.app:ActionCategory" title="Практика. &lt;br>Секции" id="89cfb4bb-d16f-4869-beae-a6d84783edf6" color="Secondary" text=" Практика. &lt;br>Секции страницы" icon="fas fa-hammer" linkedElements="64a156c8-ea84-4fbf-b4d0-7784afe8c6aa 551790e5-723c-4051-9297-e8a8f9542205 dc18c057-8f80-4f02-ad4d-fc0e7bddb939 de6246f0-4586-4544-984c-312ee61086ad 75a78652-3db3-4b9e-aeff-383c7573ddc2 75307166-ed85-44de-a294-f0a912e8e9ca ef51b006-dab3-40ea-acf0-0c2c92623f21 a7953099-c4ec-46e8-ab54-8a9ca467d1d3 6c51d8e3-75cd-4923-9ca6-c8945d4febab">

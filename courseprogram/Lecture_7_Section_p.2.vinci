  <elements xsi:type="org.nasdanika.vinci.app:ActionCategory" title="Action Group" id="ed3ecf62-b825-4214-8488-487c8921084f" text="Action Group" linkedElements="e136e66e-9ff7-4a89-a151-ee5f76c8912b">
